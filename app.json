{
  "expo": {
    "name": "Updates",
    "slug": "updates-app",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "updates",
    "userInterfaceStyle": "automatic",
    "description": "Discover church events, follow your favorite churches, and stay connected with your community.",
    "privacy": "public",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "newArchEnabled": true,
    "production": {
      "autoIncrement": true
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mezalonmax.updates",
      "buildNumber": "1.0.1",
      "config": {
        "usesNonExemptEncryption": false
      },
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to upload event images and profile photos.",
        "NSPhotoLibraryUsageDescription": "This app accesses your photo library to upload event images and profile photos.",
        "NSLocationWhenInUseUsageDescription": "This app uses your location to show nearby church events and personalize your experience.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app uses your location to show nearby church events and personalize your experience.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "icon": {
        "dark": "./assets/images/adaptive-icon.png",
        "light": "./assets/images/icon.png"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FFB800"
      },
      "package": "com.mezalonmax.updates",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "template": "./web/index.html"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "10c8aa3d-609e-41f4-9ea9-2cbcb16a1dce"
      }
    }
  }
}
